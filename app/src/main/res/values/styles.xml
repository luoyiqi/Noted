        <item name="colorFilter">@color/chrome_colorFilter</item>
        <item name="colorTag">@color/chrome_colorTag</item>
        <item name="textColorSecondary">@color/chrome_textColorSecondary</item>
        <item name="textColorTertiary">@color/chrome_textColorTertiary</item>
        <item name="android:textColor">@color/chrome_textColorTertiary</item>

        <item name="editTextBackgroundDrawable">@drawable/chrome_edit_text_background</item>
