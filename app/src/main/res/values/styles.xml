<resources>

    <style name="NotedTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:itemTextAppearance">@style/menu_item_text_appearance</item>
        <item name="android:textColorSecondary">?attr/textColorTertiary</item>
        <item name="textColorPrimary">@color/md_white_1000</item>
    </style>

    <style name="NotedTheme.Light" parent="NotedTheme.Base">
        <item name="floatingActionMenuColorFirst">@color/light_floatingActionMenuColorFirst</item>
        <item name="floatingActionMenuColorSecond">@color/light_floatingActionMenuColorSecond</item>
        <item name="floatingActionMenuColorThird">@color/light_floatingActionMenuColorThird</item>
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="windowBackground">@color/light_windowBackground</item>
        <item name="colorCardBackground">@color/light_colorCardBackground</item>
        <item name="colorDivider">@color/light_colorDivider</item>
        <item name="colorFilter">@color/light_colorFilter</item>
        <item name="colorTag">@color/light_colorTag</item>
        <item name="textColorSecondary">@color/light_textColorSecondary</item>
        <item name="textColorTertiary">@color/light_textColorTertiary</item>
        <item name="android:textColor">@color/light_textColorTertiary</item>

        <item name="editTextBackgroundDrawable">@drawable/light_edit_text_background</item>
        <item name="seekbar">@drawable/light_seekbar</item>
        <item name="tag_background">@drawable/light_tag</item>

        <item name="is_dark_theme">@bool/light_isDarkTheme</item>
    </style>

    <style name="NotedTheme.Dark" parent="NotedTheme.Base">
        <item name="floatingActionMenuColorFirst">@color/dark_floatingActionMenuColorFirst</item>
        <item name="floatingActionMenuColorSecond">@color/dark_floatingActionMenuColorSecond</item>
