        <item name="tag_background">@drawable/dark_tag</item>

        <item name="is_dark_theme">@bool/dark_isDarkTheme</item>
    </style>

    <style name="NotedTheme.Classic" parent="NotedTheme.Base">
        <item name="floatingActionMenuColorFirst">@color/classic_floatingActionMenuColorFirst</item>
        <item name="floatingActionMenuColorSecond">@color/classic_floatingActionMenuColorSecond</item>
        <item name="floatingActionMenuColorThird">@color/classic_floatingActionMenuColorThird</item>
        <item name="colorPrimary">@color/classic_colorPrimary</item>
        <item name="colorPrimaryDark">@color/classic_colorPrimaryDark</item>
        <item name="colorAccent">@color/classic_colorAccent</item>
