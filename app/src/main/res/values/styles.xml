        <item name="is_dark_theme">@bool/classic_isDarkTheme</item>
    </style>

    <style name="NotedTheme.Chrome" parent="NotedTheme.Base">
        <item name="floatingActionMenuColorFirst">@color/chrome_floatingActionMenuColorFirst</item>
        <item name="floatingActionMenuColorSecond">@color/chrome_floatingActionMenuColorSecond</item>
        <item name="floatingActionMenuColorThird">@color/chrome_floatingActionMenuColorThird</item>
        <item name="colorPrimary">@color/chrome_colorPrimary</item>
