        <item name="tag_background">@drawable/chrome_tag</item>

        <item name="is_dark_theme">@bool/chrome_isDarkTheme</item>
    </style>

    <style name="NotedTheme.Nature" parent="NotedTheme.Base">
        <item name="floatingActionMenuColorFirst">@color/nature_floatingActionMenuColorFirst</item>
        <item name="floatingActionMenuColorSecond">@color/nature_floatingActionMenuColorSecond</item>
        <item name="floatingActionMenuColorThird">@color/nature_floatingActionMenuColorThird</item>
        <item name="colorPrimary">@color/nature_colorPrimary</item>
        <item name="colorPrimaryDark">@color/nature_colorPrimaryDark</item>
        <item name="colorAccent">@color/nature_colorAccent</item>
        <item name="windowBackground">@color/nature_windowBackground</item>
        <item name="colorCardBackground">@color/nature_colorCardBackground</item>
        <item name="colorDivider">@color/nature_colorDivider</item>
        <item name="colorFilter">@color/nature_colorFilter</item>
        <item name="colorTag">@color/nature_colorTag</item>
        <item name="textColorSecondary">@color/nature_textColorSecondary</item>
        <item name="textColorTertiary">@color/nature_textColorTertiary</item>
        <item name="android:textColor">@color/nature_textColorTertiary</item>

        <item name="editTextBackgroundDrawable">@drawable/nature_edit_text_background</item>
        <item name="seekbar">@drawable/nature_seekbar</item>
        <item name="tag_background">@drawable/nature_tag</item>

        <item name="is_dark_theme">@bool/nature_isDarkTheme</item>
    </style>

    <style name="seekbar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">?attr/seekbar</item>
        <item name="android:maxHeight">1dp</item>
    </style>

    <style name="menu_item_text_appearance" parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/textColorTertiary</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="toolbar_popup" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/windowBackground</item>
        <item name="colorControlNormal">?attr/textColorTertiary</item>
    </style>

    <style name="reminder_recurrence" parent="text.small">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/textColorTertiary</item>
        <item name="android:paddingTop">@dimen/size_small</item>
        <item name="android:paddingBottom">@dimen/size_small</item>
    </style>

    <style name="card" parent="CardView">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="text">
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="text.tiny">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="text.small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text.medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="text.large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="text.huge">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="edit_text">
        <item name="android:gravity">left</item>
    </style>

    <style name="edit_text.medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="edit_text.large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="edit_text.huge">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="fab_label">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:padding">@dimen/size_small</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="dialog_button">
        <item name="android:minWidth">@dimen/size_huge</item>
        <item name="android:paddingLeft">@dimen/size_small</item>
        <item name="android:paddingRight">@dimen/size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/windowBackground</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="divider_across">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorDivider</item>
    </style>

    <style name="divider_up">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorDivider</item>
    </style>

</resources>
