        <item name="colorDivider">@color/classic_colorDivider</item>
        <item name="colorFilter">@color/classic_colorFilter</item>
        <item name="colorTag">@color/classic_colorTag</item>
        <item name="textColorSecondary">@color/classic_textColorSecondary</item>
        <item name="textColorTertiary">@color/classic_textColorTertiary</item>
