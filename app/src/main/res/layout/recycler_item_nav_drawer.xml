<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_color="?attr/colorPrimary"
    app:rv_rippleDuration="@android:integer/config_shortAnimTime">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/recycler_item_nav_drawer_container"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/size_small"
                  android:background="?attr/windowBackground"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/recycler_item_nav_drawer_icon"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/size_medium"
            />

        <TextView
            android:id="@+id/recycler_item_nav_drawer_title"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_small"
            android:gravity="left|center"
            android:textColor="?attr/textColorTertiary"
            style="@style/text.medium"
            />

    </LinearLayout>

</com.andexert.library.RippleView>