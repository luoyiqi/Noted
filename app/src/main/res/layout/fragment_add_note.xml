<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/windowBackground"
    >

    <EditText
        android:id="@+id/fragment_add_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_small"
        android:textStyle="bold"
        android:singleLine="true"
        android:hint="@string/edit_text_title_hint"
        style="@style/edit_text.small"
        />

    <EditText
        android:id="@+id/fragment_add_note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_small"
        android:hint="@string/edit_text_content_hint"
        style="@style/edit_text.small"
        />

</LinearLayout>