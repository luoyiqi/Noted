<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/card"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_medium"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/recycler_item_show_notes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/text.medium"
            />

        <TextView
            android:id="@+id/recycler_item_show_notes_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text.small"
            />

        <TextView
            android:id="@+id/recycler_item_show_notes_last_modified_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text.tiny"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>